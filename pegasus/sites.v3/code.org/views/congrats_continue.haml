#continue{:style=>"background-color:grey; color:white; overflow:hidden; padding:20px; text-align:center"}

  %p{:style=>"font-size: 18px; font-family: 'Gotham 5r', sans-serif;"}
    %b=I18n.t :continue_learning_header

  %a{:href=>'http://studio.code.org', :target => "_blank"}
    %button.button-color-share{:style=>'margin:10px'}
      %b=I18n.t :learn_next_level

  %a{:href=>'https://code.org/learn/beyond', :target => "_blank"}
    %button.button-color-share{:style=>'margin:10px'}
      %b=I18n.t :learn_online

  -if request.site != 'uk.code.org'
    %a{:href=>'https://code.org/learn/local', :target => "_blank"}
      %button.button-color-share{:style=>'margin:10px'}
        %b=I18n.t :learn_classes
